              <NewsPage id="1449" parentID="1241" level="7" writerID="0" creatorID="1" nodeType="1245" template="1246" sortOrder="58" createDate="2012-08-08T13:37:01" updateDate="2012-09-06T12:36:53" nodeName="Danish Presidency takes first step towards agreement on more transparent mortgage credit for EU consumers" urlName="danish-presidency-takes-first-step-towards-agreement-on-more-transparent-mortgage-credit-for-eu-consumers" writerName="admin" creatorName="Rasmus Rudolf" path="-1,1045,1047,1163,1178,1315,1241,1449" isDoc="">
                <date>2012-05-31T00:00:00</date>
