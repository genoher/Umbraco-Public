              <NewsPage id="1396" parentID="1241" level="7" writerID="0" creatorID="1" nodeType="1245" template="1246" sortOrder="28" createDate="2012-08-07T16:02:55" updateDate="2012-09-06T12:36:49" nodeName="Vi skal høste de digitale gevinster" urlName="vi-skal-hoeste-de-digitale-gevinster" writerName="admin" creatorName="Rasmus Rudolf" path="-1,1045,1047,1163,1178,1315,1241,1396" isDoc="">
