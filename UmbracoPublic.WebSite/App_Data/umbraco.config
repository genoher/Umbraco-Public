              <NewsPage id="1378" parentID="1241" level="7" writerID="0" creatorID="1" nodeType="1245" template="1246" sortOrder="17" createDate="2012-08-07T15:17:45" updateDate="2012-09-06T12:36:48" nodeName="Teknologi giver frihed til mere omsorg" urlName="teknologi-giver-frihed-til-mere-omsorg" writerName="admin" creatorName="Rasmus Rudolf" path="-1,1045,1047,1163,1178,1315,1241,1378" isDoc="">
