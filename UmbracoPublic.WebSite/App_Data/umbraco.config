              <NewsPage id="1384" parentID="1241" level="7" writerID="0" creatorID="1" nodeType="1245" template="1246" sortOrder="22" createDate="2012-08-07T15:32:27" updateDate="2012-09-06T12:36:49" nodeName="Regeringen nedsætter produktivitetskommission" urlName="regeringen-nedsaetter-produktivitetskommission" writerName="admin" creatorName="Rasmus Rudolf" path="-1,1045,1047,1163,1178,1315,1241,1384" isDoc="">
                <date>2012-03-20T00:00:00</date>
