              <NewsPage id="1392" parentID="1241" level="7" writerID="0" creatorID="1" nodeType="1245" template="1246" sortOrder="25" createDate="2012-08-07T15:51:57" updateDate="2012-09-06T12:36:49" nodeName="Danmark låner Irland 3 mia. kr." urlName="danmark-laaner-irland-3-mia-kr" writerName="admin" creatorName="Rasmus Rudolf" path="-1,1045,1047,1163,1178,1315,1241,1392" isDoc="">
                <date>2012-03-30T00:00:00</date>
